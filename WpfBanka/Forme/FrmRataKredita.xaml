<Window x:Class="WpfBanka.Forme.FrmRataKredita"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBanka.Forme"
        mc:Ignorable="d"
        Title="Dodaj/Izmijeni ratu kredita" Height="200" Width="300">
    <Grid>
        <Label Content="Iznos rate kredita:" HorizontalAlignment="Left" Margin="30,20,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbKredit" HorizontalAlignment="Left" Margin="140,50,0,0" VerticalAlignment="Top" Width="120" DisplayMemberPath="Kredit" SelectedValuePath="KreditID"/>
        <Label Content="Kredit:" HorizontalAlignment="Left" Margin="30,50,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtIznosRateKredita" HorizontalAlignment="Left" Height="23" Margin="140,20,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnSacuvaj" Content="Sačuvaj" HorizontalAlignment="Left" Margin="30,130,0,0" VerticalAlignment="Top" Width="75" Click="btnSačuvaj_Click"/>
        <Button x:Name="btnOtkazi" Content="Otkaži" HorizontalAlignment="Left" Margin="180,130,0,0" VerticalAlignment="Top" Width="75" Click="btnOtkaži_Click"/>
    </Grid>
</Window>
